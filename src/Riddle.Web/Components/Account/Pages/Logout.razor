@page "/Account/Logout"
@layout Riddle.Web.Components.Layout.AuthLayout
@using Microsoft.AspNetCore.Identity
@using Riddle.Web.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager NavigationManager

@code {
    private bool isLoggingOut = false;

    private void PerformLogout()
    {
        if (isLoggingOut) return;
        isLoggingOut = true;
        
        // Navigate to the GET endpoint which handles signout via HTTP (required for cookie clearing)
        NavigationManager.NavigateTo("/Account/PerformLogout?returnUrl=Account/Login", forceLoad: true);
    }
}

<PageTitle>Sign Out - Riddle</PageTitle>
<HeadContent>
    <link rel="stylesheet" href="css/app.min.css" />
</HeadContent>

<main class="bg-gray-50 dark:bg-gray-900 min-h-screen w-full">
    <div class="mx-auto flex min-h-screen flex-col items-center justify-center px-6 py-8 dark:bg-gray-900">
        <a href="/" class="mb-8 flex items-center justify-center text-2xl font-semibold text-gray-900 dark:text-white lg:mb-10">
            <img src="/images/flowbite.svg" class="mr-4 h-11" alt="Riddle Logo" />
            <span>Riddle</span>
        </a>

        <div class="flex w-full max-w-lg flex-col rounded-lg border border-gray-200 bg-white p-4 shadow-md dark:border-gray-700 dark:bg-gray-800 sm:p-6">
            <h1 class="mb-3 text-2xl font-bold text-gray-900 dark:text-white">
                Sign out
            </h1>

            <p class="text-gray-500 dark:text-gray-400 mb-6">
                Are you sure you want to sign out?
            </p>

            <div class="space-y-4">
                <button @onclick="PerformLogout" 
                        disabled="@isLoggingOut"
                        class="w-full rounded-lg bg-red-600 px-5 py-3 text-center text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-4 focus:ring-red-300 dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900 disabled:opacity-50 disabled:cursor-not-allowed">
                    @if (isLoggingOut)
                    {
                        <span>Signing out...</span>
                    }
                    else
                    {
                        <span>Sign out</span>
                    }
                </button>
            </div>

            <div class="mt-4 text-sm font-medium text-gray-500 dark:text-gray-300">
                <a href="/" class="text-primary-700 hover:underline dark:text-primary-500">
                    ‚Üê Back to home
                </a>
            </div>
        </div>
    </div>
</main>
