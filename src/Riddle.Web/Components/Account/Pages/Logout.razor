@page "/Account/Logout"
@layout Riddle.Web.Components.Layout.AuthLayout
@using Microsoft.AspNetCore.Identity
@using Riddle.Web.Models
@using Flowbite.Components
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager NavigationManager

<PageTitle>Sign Out - Riddle</PageTitle>
<HeadContent>
    <link rel="stylesheet" href="css/app.min.css" />
</HeadContent>

<main class="bg-gray-50 dark:bg-gray-900 min-h-screen w-full">
    <div class="mx-auto flex min-h-screen flex-col items-center justify-center px-6 py-8 dark:bg-gray-900">
        <a href="/" class="mb-8 flex items-center justify-center text-2xl font-semibold text-gray-900 dark:text-white lg:mb-10">
            <img src="/images/flowbite.svg" class="mr-4 h-11" alt="Riddle Logo" />
            <span>Riddle</span>
        </a>

        <div class="flex w-full max-w-lg flex-col rounded-lg border border-gray-200 bg-white p-4 shadow-md dark:border-gray-700 dark:bg-gray-800 sm:p-6">
            <h1 class="mb-3 text-2xl font-bold text-gray-900 dark:text-white">
                Sign out
            </h1>

            <p class="text-gray-500 dark:text-gray-400 mb-6">
                Are you sure you want to sign out?
            </p>

            <form action="/Account/Logout" method="post" class="space-y-4">
                <AntiforgeryToken />
                <input type="hidden" name="returnUrl" value="" />
                
                <Button Type="ButtonType.Submit" Size="ButtonSize.Large" Color="ButtonColor.Red" Class="w-full">
                    Sign out
                </Button>
            </form>

            <div class="mt-4 text-sm font-medium text-gray-500 dark:text-gray-300">
                <a href="/" class="text-primary-700 hover:underline dark:text-primary-500">
                    ‚Üê Back to home
                </a>
            </div>
        </div>
    </div>
</main>
