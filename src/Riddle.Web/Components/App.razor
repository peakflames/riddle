<!DOCTYPE html>
<html lang="en" class="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <script>
        // Apply dark mode immediately to prevent flash of wrong theme (FOWT)
        // Must run synchronously in <head> before page renders
        (function() {
            try {
                var theme = localStorage.getItem('color-theme');
                if (theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                    document.documentElement.classList.add('dark');
                } else {
                    document.documentElement.classList.remove('dark');
                }
            } catch (e) {}
        })();
    </script>
    <ResourcePreloader />
    <link href="_content/Flowbite/flowbite.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="_content/Flowbite/css/github-dark.min.css" />
    <link rel="stylesheet" href="@Assets["css/app.min.css"]" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

