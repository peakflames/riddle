@using Riddle.Web.Models

<div class="rounded-lg border border-gray-200 bg-white p-2 dark:border-gray-700 dark:bg-gray-800">
    <div class="flex items-center justify-between">
        <div class="flex items-center gap-2 min-w-0 flex-1">
            <!-- Character Icon based on Class -->
            <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-gray-100 dark:bg-gray-700">
                @if (Character.Type == "NPC")
                {
                    <UserSolidIcon Class="h-4 w-4 text-gray-500 dark:text-gray-400" />
                }
                else
                {
                    @GetClassIcon()
                }
            </div>
            <div class="min-w-0">
                <h4 class="text-sm font-semibold text-gray-900 dark:text-white truncate">
                    @Character.Name
                </h4>
                <p class="text-xs text-gray-500 dark:text-gray-400">
                    @Character.DisplayRaceClass @if (Character.Level > 0) { <span class="ml-1">L@(Character.Level)</span> }
                </p>
            </div>
        </div>
        
        <!-- Status Badge + Action Icons -->
        <div class="flex items-center gap-1 shrink-0">
            @if (Character.IsClaimed)
            {
                <Badge Color="BadgeColor.Success" Size="BadgeSize.ExtraSmall">
                    @Character.PlayerName
                </Badge>
            }
            else if (Character.Type == "PC")
            {
                <Badge Color="BadgeColor.Gray" Size="BadgeSize.ExtraSmall">
                    Unclaimed
                </Badge>
            }
            else
            {
                <Badge Color="BadgeColor.Purple" Size="BadgeSize.ExtraSmall">
                    NPC
                </Badge>
            }
            
            @if (ShowActions || (AllowUnclaim && Character.IsClaimed))
            {
                <div class="flex items-center gap-0.5 ml-1">
                    @if (ShowActions)
                    {
                        <button type="button" 
                                class="inline-flex items-center justify-center p-1 text-gray-400 hover:text-blue-500 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors"
                                title="Edit character"
                                @onclick="@(() => OnEdit.InvokeAsync(Character))"
                                @onclick:stopPropagation="true">
                            <PencilIcon class="w-3.5 h-3.5" />
                        </button>
                        <button type="button" 
                                class="inline-flex items-center justify-center p-1 text-gray-400 hover:text-red-500 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors"
                                title="Remove character"
                                @onclick="@(() => OnRemove.InvokeAsync(Character))"
                                @onclick:stopPropagation="true">
                            <TrashBinIcon class="w-3.5 h-3.5" />
                        </button>
                    }
                    @if (AllowUnclaim && Character.IsClaimed)
                    {
                        <button type="button" 
                                class="inline-flex items-center justify-center p-1 text-gray-400 hover:text-orange-500 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors"
                                title="Remove player claim"
                                @onclick="HandleUnclaim"
                                @onclick:stopPropagation="true">
                            <CloseIcon class="w-3.5 h-3.5" />
                        </button>
                    }
                </div>
            }
        </div>
    </div>
    
    <!-- Stats Row -->
    <div class="mt-1.5 flex items-center gap-3 text-xs pl-10">
        <div class="flex items-center gap-1">
            <span class="font-medium text-gray-500 dark:text-gray-400">HP</span>
            <span class="@GetHpColorClass()">
                @Character.CurrentHp/@Character.MaxHp
            </span>
        </div>
        <div class="flex items-center gap-1">
            <span class="font-medium text-gray-500 dark:text-gray-400">AC</span>
            <span class="text-gray-900 dark:text-white">@Character.ArmorClass</span>
        </div>
        @if (Character.Initiative > 0)
        {
            <div class="flex items-center gap-1">
                <span class="font-medium text-gray-500 dark:text-gray-400">Init</span>
                <span class="text-gray-900 dark:text-white">+@Character.Initiative</span>
            </div>
        }
    </div>
    
    <!-- Conditions -->
    @if (Character.Conditions.Any())
    {
        <div class="mt-1 flex flex-wrap gap-1 pl-10">
            @foreach (var condition in Character.Conditions)
            {
                <Badge Color="BadgeColor.Warning" Size="BadgeSize.ExtraSmall">
                    @condition
                </Badge>
            }
        </div>
    }
</div>

@code {
    [Parameter, EditorRequired]
    public Character Character { get; set; } = null!;
    
    [Parameter]
    public bool ShowActions { get; set; } = true;
    
    [Parameter]
    public bool AllowUnclaim { get; set; } = false;
    
    [Parameter]
    public EventCallback<Character> OnEdit { get; set; }
    
    [Parameter]
    public EventCallback<Character> OnRemove { get; set; }
    
    [Parameter]
    public EventCallback<Character> OnUnclaim { get; set; }
    
    private async Task HandleUnclaim()
    {
        await OnUnclaim.InvokeAsync(Character);
    }
    
    private RenderFragment GetClassIcon() => Character.Class?.ToLower() switch
    {
        "wizard" or "sorcerer" or "warlock" => @<BookOpenIcon Class="h-5 w-5 text-purple-500" />,
        "fighter" or "barbarian" or "paladin" => @<span class="text-red-500 text-lg">‚öîÔ∏è</span>,
        "rogue" or "ranger" => @<span class="text-green-500 text-lg">üó°Ô∏è</span>,
        "cleric" or "druid" => @<span class="text-yellow-500 text-lg">‚ú®</span>,
        "bard" => @<span class="text-pink-500 text-lg">üéµ</span>,
        "monk" => @<span class="text-orange-500 text-lg">üëä</span>,
        _ => @<UserCircleIcon Class="h-5 w-5 text-blue-500" />
    };
    
    private string GetHpColorClass()
    {
        if (Character.MaxHp == 0) return "text-gray-900 dark:text-white";
        
        var ratio = (double)Character.CurrentHp / Character.MaxHp;
        return ratio switch
        {
            <= 0 => "text-gray-500",
            <= 0.25 => "text-red-600 dark:text-red-400 font-bold",
            <= 0.5 => "text-yellow-600 dark:text-yellow-400",
            _ => "text-green-600 dark:text-green-400"
        };
    }
}
